<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".DSQ.light">

   <!--TODO:这个页面还没做好-->
      <GridLayout
          android:padding="20dp"
          android:layout_width="match_parent"
          android:layout_height="match_parent">

         <Button
             android:id="@+id/light_sitting_room"
             android:layout_width="160dp"
             android:layout_height="160dp"
             android:layout_row="0"
             android:layout_column="0"
             android:text="客厅"
             android:textSize="24dp"
             android:background="@drawable/setting_window_two_d"></Button>

         <LinearLayout
             android:padding="4dp"
             android:layout_width="180dp"
             android:layout_height="160dp"
             android:layout_row="0"
             android:layout_column="1">
         </LinearLayout>

         <Button
             android:id="@+id/light_bedroom"
             android:layout_width="160dp"
             android:layout_height="160dp"
             android:layout_row="1"
             android:layout_column="1"
             android:text="卧室"
             android:textSize="24dp"
             android:background="@drawable/setting_window_two_d"></Button>

         <LinearLayout
             android:padding="4dp"
             android:layout_width="180dp"
             android:layout_height="160dp"
             android:layout_row="1"
             android:layout_column="0">

         </LinearLayout>

         <Button
             android:id="@+id/light_kitchen"
             android:layout_width="160dp"
             android:layout_height="160dp"
             android:layout_row="2"
             android:layout_column="0"
             android:background="@drawable/setting_window_two_d"
             android:text="厨房"
             android:textSize="24dp"></Button>

         <LinearLayout
             android:padding="4dp"
             android:layout_width="180dp"
             android:layout_height="160dp"
             android:layout_row="2"
             android:layout_column="1">

         </LinearLayout>

         <Button
             android:id="@+id/light_other_zone"
             android:layout_width="160dp"
             android:layout_height="160dp"
             android:layout_row="3"
             android:layout_column="1"
             android:text="其他"
             android:textSize="24dp"
             android:background="@drawable/setting_window_two_d"></Button>

         <LinearLayout
             android:padding="4dp"
             android:layout_width="180dp"
             android:layout_height="160dp"
             android:layout_row="3"
             android:layout_column="0">

         </LinearLayout>
      </GridLayout>

</LinearLayout>