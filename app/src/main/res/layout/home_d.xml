<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_column="1"
    android:layout_row="1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/main_light"
        android:layout_columnWeight="1"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:background="#00FFFFFF"
        android:src="@mipmap/light"></ImageButton>

    <ImageButton
        android:id="@+id/main_electronic_door_lock"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:background="#00FFFFFF"
        android:src="@mipmap/electronic_door_lock"></ImageButton>

    <ImageButton
        android:id="@+id/main_air_conditioning"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:background="#00FFFFFF"
        android:src="@mipmap/air_conditioning"></ImageButton>

    <ImageButton
        android:id="@+id/main_smart_optimization"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:background="#00FFFFFF"
        android:src="@mipmap/smart_optimization"></ImageButton>

    <ImageButton
        android:id="@+id/main_more_three"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:background="#00FFFFFF"
        android:src="@mipmap/more_three"></ImageButton>
</GridLayout>