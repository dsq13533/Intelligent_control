<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_column="1"
    android:layout_row="1"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnWeight="1">
        <ImageView
            android:id="@+id/main_light"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/light">
        </ImageView>

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="灯"
            android:textSize="24dp"
            android:textColor="#000000"
            android:gravity="center">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_columnWeight="1">
        <ImageView
            android:id="@+id/main_electronic_door_lock"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/electronic_door_lock">
        </ImageView>

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="智能门锁"
            android:textSize="24dp"
            android:textColor="#000000"
            android:gravity="center">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnWeight="1">
        <ImageView
            android:id="@+id/main_air_conditioning"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/air_conditioning_main">
        </ImageView>

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="空调"
            android:textSize="24dp"
            android:textColor="#000000"
            android:gravity="center">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_columnWeight="1">
        <ImageView
            android:id="@+id/main_smart_optimization"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/smart_optimization">
        </ImageView>

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="智能网关"
            android:textSize="24dp"
            android:textColor="#000000"
            android:gravity="center">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnWeight="1">
        <ImageView
            android:id="@+id/main_more_three"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/more_three">
        </ImageView>

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多"
            android:textSize="24dp"
            android:textColor="#000000"
            android:gravity="center">
        </TextView>
    </LinearLayout>
</GridLayout>